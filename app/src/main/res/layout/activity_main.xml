<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askjeffreyliu.zebraview.MainActivity">

    <com.askjeffreyliu.zebraview.ZebraView
        android:id="@+id/zebraview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barWidth="36dp"
        app:color1="@color/colorAccent"
        app:color2="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setNewColor"
        android:text="set new colors" />

</android.support.constraint.ConstraintLayout>
